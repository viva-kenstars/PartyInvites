
@model PartyInvites.Models.GuestResponse

<html>
<head>
   @*<meta name="viewport" content="width=device-width" />*@
    <title>RSVPFORM</title>
 
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
           
           
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>

                <div class="form-group">
                    <label asp-for="Name"> Enter Name</label>
                    <input class="form-control" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="Email"> Enter Email</label>
                    <input class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone"> Enter Phne Number</label>
                    <input class="form-control"  asp-for="Phone" />
                </div>
                <div class="form-group">
                    <label> Will you attend? </label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value=""> chose an option</option>
                        <option value="true"> yes, I'll be there</option>
                        <option value="false">No, I can't come</option>
                    </select>
                </div>
                <div class="text-center">
                    <button clastype="submit">
                    Submit Rsvp
                    </button>
                </div>
            </form>
        </div>
     </div>
</body>
</html>

